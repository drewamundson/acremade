{% stylesheet %}
  .header-display-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 30px;
    grid-row-gap: 80px;
    align-items: baseline;
  }

  .hover-pic {
    opacity: 0;
    position: absolute;
    bottom: 0;
    right: 0;
    width: 100%;
  }

  .bg-text {
    position: relative;
  }

  .bg-text span {
    z-index: 1;
    padding: 3px 9px;
    position: relative;    
  }

  .bg-text:after {
    content: '';
    position: absolute;
    width: 85%;
    height: 85%;
    background: rgb(224, 193, 63);
    left: 16px;
    top: 6px;
  }

  .hover:hover .main-pic {
    opacity: 0;
  }

  .hover:hover .hover-pic {
    opacity: 1;
  }

  .min-full--h {
    min-height: 100vh;
  }

  .overlay:after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,.3);
    pointer-events: none;
  }

  .arrow-down {
    left: 50%;
    transform: translateX(-50%);
    bottom: -10px;
  }

  .arrow-down svg {
    margin: 0;
  }

  .fp-desc p {
    padding-left: 0!important;
  }

  @media only screen and (min-width: 750px){
    .header-display-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;
    }
   
  }

  @media only screen and (min-width: 990px){
    .header-display-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }
  }

  .site-nav__chevron-down svg,
  .site-nav__chevron-up svg {
    margin: 0;
  }

{% endstylesheet %}